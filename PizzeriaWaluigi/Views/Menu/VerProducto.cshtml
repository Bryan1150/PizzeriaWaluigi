@model PizzeriaWaluigi.Models.ProductoModel
@{
    var Producto = ViewBag.Producto;
}

<head>
    <link href="~/Styles/ListaFuncionarios.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
</head>

<style>
    img {
        border-radius: 0.5em;
        border: 2px solid #133b5c;
        box-shadow: 0px 0px 0px #ccc;
        height: 400px;
        width: 400px;
        object-fit: cover;
    }
</style>

<body>
    <span class="titulo">
        @ViewBag.Producto.Nombre
    </span>

    <div class="row d-flex flex-wrap align-items-center">

        <div class="col-md-4">
            <img src=@Url.Action("ObtenerImagen", "Menu", new { idProducto = @ViewBag.Producto.Id })>
        </div>
        <div class="col-md-4">
            <h4>Descripcion</h4>
            <p>@ViewBag.Producto.Descripcion</p>
            <br />

            <h4>Detalles</h4>
            <p>Precio: @ViewBag.Producto.Precio CRC</p>
            <p>Categoria: @ViewBag.Producto.Categoria</p>
            <br />
            @Html.ActionLink("Comprar", "Envio_PagoDatos", "Pagos", new { area = "" }, new { @class = "btn btn-success", @style = "color:#fff; width: 100%;"})
        </div>
    </div>
    
    <br />

    <div style="margin-top:100px">
        @Html.ActionLink("Volver al menu", "Menu", "Menu", new { area = "" }, new { @class = "btn btn-danger", @style = "color:#fff" })
    </div>

</body>
