@model PizzeriaWaluigi.Models.ProductoModel
@{
    var Producto = ViewBag.Producto;
}

<head>
    <link href="~/Styles/ListaFuncionarios.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Utils/css/main.css">
</head>

<style>
    img {
        border-radius: 0.5em;
        border: 2px solid #133b5c;
        box-shadow: 0px 0px 0px #ccc;
        height: 400px;
        width: 400px;
        object-fit: cover;
    }
</style>

<body>
    <span class="titulo">
        @ViewBag.Producto.Nombre
    </span>

    <div class="row d-flex flex-wrap align-items-center">

        <div class="col-md-4">
            <img src=@Url.Action("ObtenerImagen", "Menu", new { idProducto = @ViewBag.Producto.Id })>
        </div>
        <div class="col-md-4">
            <h4>Descripcion</h4>
            <p>@ViewBag.Producto.Descripcion</p>
            <br />

            <h4>Detalles</h4>
            <p>Precio: @ViewBag.Producto.Precio CRC</p>
            <p>Categoria: @ViewBag.Producto.Categoria</p>
            <br />
            
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" style="width: 100%;">
                Comprar
            </button>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modo de envio</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        De que forma quiere recibir el pedido?
                    </div>
                    <div class="modal-footer">
                        @Html.ActionLink("Express", "Envio_PagoDatos", "Pagos", new { area = "" }, new { @class = "btn btn-success", @style = "color:#fff; width: 100%;" })
                        @Html.ActionLink("Recoger en restaurante", "Envio_PagoDatos", "Pagos", new { area = "" }, new { @class = "btn btn-success", @style = "color:#fff; width: 100%;" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    
    <br />

    <div style="margin-top:100px">
        @Html.ActionLink("Volver al menu", "Menu", "Menu", new { area = "" }, new { @class = "btn btn-danger", @style = "color:#fff" })
    </div>

</body>
